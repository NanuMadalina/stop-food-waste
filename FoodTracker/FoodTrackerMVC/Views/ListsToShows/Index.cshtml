@model IEnumerable<FoodTrackerMVC.Models.ListsToShow>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FkProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_list_for_user)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FkProduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.id_list_for_user)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdList">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdList">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdList">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

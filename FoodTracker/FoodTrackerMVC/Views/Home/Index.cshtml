@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner0.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
				<p style =" color: orange">
					Welcome to Don't waste food application. Ready to change your bad habits?
				</p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner0.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
				<p style="align-content:center">Facts:</p>
				<p >About one third of all food produced for human consumption goes to waste.</p>
				<p>Consumers in rich countries waste almost as much food, 222 million tons, as the entire net food production of sub-Saharan Africa.</p>
            </div>
        </div>
 
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


